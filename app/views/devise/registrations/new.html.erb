 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <h2>Sign up</h2>
  
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Tu Nombre" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "micorreo@ejemplo.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Minimo 6 Caracteres" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirma tu ContraseÃ±a" %>
  </div>

  <%= f.submit "Registrarme", class: "btn btn-primary" %>
<% end %>

<center>
  or <%= render "devise/shared/links" %>
</center>
