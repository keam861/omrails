<div class="container">

  <h1>Mi Propiedad</h1>

    <table class="table">
      <thead>
       <tr>
        <th>User</th>
        <th>Estado</th>
        <th>Municipio</th>
        <th>Colonia</th>
        <th>Calle</th>
        <th>Numero</th>
        <th>Tipo de propiedad</th>
        <th>M2terreno</th>
        <th>M2construccion</th>
        <th>Ba単os</th>
        <th>Habitaciones</th>
        <th>Entorno</th>
        <th>Condiciones de la propiedad</th>
        <th>Precio al que adquiri</th>
        <th>A単o al que adquiri</th>
        <th>En venta</th>
        <th>Plazo de venta</th>
        <th>Documentos</th>

        <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @mi_propiedad.user.email %></td>
          <td><%= @mi_propiedad.estado %></td>
          <td><%= @mi_propiedad.municipio %></td>
          <td><%= @mi_propiedad.colonia %></td>
          <td><%= @mi_propiedad.calle %></td>
          <td><%= @mi_propiedad.numero %></td>
          <td><%= @mi_propiedad.tipo_de_propiedad %></td>
          <td><%= @mi_propiedad.m2terreno %></td>
          <td><%= @mi_propiedad.m2construccion %></td>
          <td><%= @mi_propiedad.ba単os %></td>
          <td><%= @mi_propiedad.habitaciones %></td>
          <td><%= @mi_propiedad.entorno %></td>
          <td><%= @mi_propiedad.condiciones_de_la_propiedad %></td>
          <td><%= @mi_propiedad.precio_al_que_adquiri %></td>
          <td><%= @mi_propiedad.a単o_al_que_adquiri %></td>
          <td><%= @mi_propiedad.en_venta %></td>
          <td><%= @mi_propiedad.plazo_de_venta %></td>
          <td><%= @mi_propiedad.uploads %></td>
       </tr>
      </tbody>
  </table>
      <br>
        <center>
          <div id="carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

                  <% @mi_propiedad.images.each_with_index do |image, index| %>
                    <% if index == 0 %>

                      <div class="carousel-item active">
                        <%= link_to image_tag(image.variant(resize: "400x400")), image %> 
                      </div>

                    <% else %> 
                      <div class="carousel-item">
                         <%= link_to image_tag(image.variant(resize: "400x400")), image %>
                      </div>

                    <% end %> 
                  <% end %>

                    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>

          <div>
        </center>
          <strong>Documentos:</strong>
            <% @mi_propiedad.uploads.each do |upload| %>
              <% if upload.variable? %>
                <%= link_to image_tag(upload.variant(resize: "400x400")), upload %>
              <% elsif upload.previewable? %>
                <%= link_to image_tag(upload.preview(resize: "400x400")), rails_blob_path(upload, disposition: :attachment) %>
              <% elsif upload.image? %>
                 <%= link_to image_tag(upload, width: 400), upload%>
              <% else %>
                <%= link_to upload.filename, rails_blob_path(upload, disposition: :attachment) %>  
              <% end %>
            <% end %>  
        </div>

            <!-- link_to image_tag(@mi_propiedad.image.variant(resize: "400x400"), alt:"",  class:"d-block w-100"), @mi_propiedad.image %>
 -->

         <% if @mi_propiedad.user == current_user %>
          <%= link_to 'Edit', edit_mi_propiedad_path(@mi_propiedad) %> |
        <% end %>
      <%= link_to 'Back', mi_propiedads_path %>
    </div>
  </div>
</div>





